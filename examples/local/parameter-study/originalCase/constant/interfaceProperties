FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      interfaceProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

//- diffuse interface width
epsilon                     epsilon [ 0 1 0 0 0 0 0 ] 9e-5; // R/20
//nInterfaceCells	6;

//- diffuse interface type
diffuseInterfaceType capillaryInterface;

capillaryInterface
{
    interfaceRelaxation
    {
        model equilibrium;//relaxation;//equilibrium;
    };
    sigmas
    (
        ( air water ) 0.072
    );

    Marangoni
    {
        switchMarangoni     off;

        model linear;

        T0                  T0 [ 0 0 0 1 0 0 0 ] 273.1;

        sigmaTs
        (
            /*( air water ) 0.2*/
        );
    }
}

