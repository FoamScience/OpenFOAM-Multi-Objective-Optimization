// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// Number of curve points to generate on the lower patch
nCurvePnts 100;

// Number of control points for the Bezier curve
nCtrlPnts 8;

// Domain length
L 0.29;

// Angles in degrees, Range: [-180, 180]
// Order is kinda strange
// 1st NEW control point -> last NEW control point
// 2nd NEW control point -> 2nd NEW last control point
// ....
// To allow for variable number of control points

angle1 -90;
angle2 20;
angle3 -30;
angle4 140;
angle5 180;
angle6 -150;
// Extra angles? not used!
angle7   0;
angle8   0;

// Radius ratios of L to put the control points at
// Same order as angles
ratio1   0.1;
ratio2   0.3;
ratio3   0.6;
ratio4   0.4;
ratio5   0.2;
ratio6   0.03;
// Extra radiuses
ratio7   0.1;
ratio8   0.1;

